{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "lib": ["esnext", "DOM", "DOM.Iterable"],
    "emitDeclarationOnly": true,
    "baseUrl": "./",
    "outFile": "dist/index",
    "jsx": "react",
    "strictNullChecks": false,
    "paths": {
      "@/*": ["src/*"]
    },
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["src"]
}
